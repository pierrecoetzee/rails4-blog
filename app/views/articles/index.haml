.container{'ng-controller': 'ArticleListCtrl'}

  %h1 {{title}}

  %table{class: 'table'}
    %tr
      %th Title
      %th Text
      %th
      %th
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.text
        %td= link_to 'Show', article_path(article), {'data-no-turbolink': true}
        %td= link_to 'Edit', edit_article_path(article), {'data-no-turbolink': true}
        %td= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?', 'data-no-turbolink': true }
